{
  "name": "ambrosia-pos-electron",
  "version": "1.0.0",
  "description": "Ambrosia-POS Desktop Application",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "dev:inspect": "electron --inspect=5858 .",
    "build:prepare": "bash scripts/prepare-resources.sh",
    "build": "npm run build:prepare && electron-builder",
    "pack": "npm run build:prepare && electron-builder --dir",
    "dist": "npm run build:prepare && electron-builder",
    "dist:mac:arm64": "TARGET_PLATFORM=macos-arm64 npm run build:prepare && electron-builder --mac",
    "dist:mac:x64": "TARGET_PLATFORM=macos-x64 npm run build:prepare && electron-builder --mac",
    "dist:win": "TARGET_PLATFORM=win-x64 npm run build:prepare && electron-builder --win",
    "dist:linux": "TARGET_PLATFORM=linux-x64 npm run build:prepare && electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "BTC-GDL",
  "license": "MIT",
  "devDependencies": {
    "electron": "^36.1.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "bip39": "^3.1.0",
    "cross-spawn": "^7.0.6",
    "find-free-port": "^2.0.0",
    "tree-kill": "^1.2.2",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.olympus-btc.ambrosia-pos",
    "productName": "Ambrosia POS",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "services/**/*",
      "utils/**/*"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": ".",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.business",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
